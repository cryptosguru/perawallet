<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/page_horizontal_spacing"
    android:paddingTop="20dp"
    android:paddingBottom="@dimen/keyline_1">

    <TextView
        android:id="@+id/stepNumberTextView"
        style="@style/TextAppearance.LedgerInstructionStepNumber"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_1"
        android:fontFamily="@font/publicsans_regular"
        android:lineSpacingMultiplier="1.05"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stepNumberTextView"
        app:layout_constraintTop_toTopOf="@+id/stepNumberTextView"
        tools:text="For general usage of your Ledger’s Bluetooth feature, please refer to Ledger’s official Bluetooth Connection Guide. " />

</androidx.constraintlayout.widget.ConstraintLayout>
