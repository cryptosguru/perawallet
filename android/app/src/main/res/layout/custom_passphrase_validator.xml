<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/selectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/publicsans_regular"
        android:textColor="@color/tertiaryTextColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Select word #5" />

    <com.google.android.material.button.MaterialButton
        style="@style/UnelevatedButton.PassphraseValidation"
        android:id="@+id/firstWordTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/secondWordTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectTextView"
        tools:text="lion" />

    <com.google.android.material.button.MaterialButton
        style="@style/UnelevatedButton.PassphraseValidation"
        android:id="@+id/secondWordTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/keyline_1"
        android:layout_marginEnd="@dimen/keyline_1"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/thirdWordTextView"
        app:layout_constraintStart_toEndOf="@+id/firstWordTextView"
        app:layout_constraintTop_toTopOf="@id/firstWordTextView"
        tools:text="brother" />

    <com.google.android.material.button.MaterialButton
        style="@style/UnelevatedButton.PassphraseValidation"
        android:id="@+id/thirdWordTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/secondWordTextView"
        app:layout_constraintTop_toTopOf="@id/firstWordTextView"
        tools:text="crawl" />
</merge>
