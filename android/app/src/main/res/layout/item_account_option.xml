<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:paddingHorizontal="@dimen/page_horizontal_spacing">

    <ImageView
        android:id="@+id/typeImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:srcCompat="@drawable/ic_ledger_real" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/account_vertical_margin"
        android:layout_marginEnd="@dimen/keyline_1"
        android:layout_marginBottom="@dimen/account_vertical_margin"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/publicsans_medium"
        android:maxLines="1"
        android:textSize="14sp"
        tools:text="Spending Account test line long line test" />

    <com.algorand.android.customviews.AmountTextView
        android:id="@+id/balanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:algoFontFamily="@font/publicsans_medium"
        app:algoTextViewSize="15sp" />

</LinearLayout>

