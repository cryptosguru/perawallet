<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_height="40dp"
    tools:layout_width="40dp"
    tools:parentTag="android.widget.FrameLayout">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/assetNameTextView"
        style="@style/TextAppearance.Footnote.Description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:maxLines="1"
        android:visibility="gone"
        app:autoSizeMaxTextSize="@dimen/text_size_13"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        tools:text="MN"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/assetAvatarImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_asset_avatar_border"
        android:padding="1dp"
        tools:srcCompat="@drawable/ic_algo_green_round" />

    <ProgressBar
        android:id="@+id/assetAvatarProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacing_xsmall"
        android:visibility="gone"
        tools:visibility="visible" />

</merge>
