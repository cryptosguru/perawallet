<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:gravity="center_horizontal"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/send_request_bottom_view_min_height"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendButton"
            style="@style/BaseIconButton.Circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:backgroundTint="@color/orange_F0"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_send"
            app:iconTint="@color/primaryButtonTextColor" />

        <TextView
            android:id="@+id/sendTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/publicsans_medium"
            android:text="@string/send"
            android:textColor="@color/gray_8A"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/send_request_bottom_view_min_height"
        android:layout_marginStart="44dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/receiveButton"
            style="@style/BaseIconButton.Circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_show_qr"
            app:iconTint="@color/primaryButtonTextColor" />

        <TextView
            android:id="@+id/receiveTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/publicsans_medium"
            android:text="@string/receive"
            android:textColor="@color/gray_8A"
            android:textSize="14sp" />

    </LinearLayout>

</merge>
