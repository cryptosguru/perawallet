<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spacing_xlarge"
    android:paddingVertical="@dimen/spacing_large">

    <TextView
        android:id="@+id/stepNumberTextView"
        style="@style/TextAppearance.Body.Sans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/position_with_dot" />

    <TextView
        android:id="@+id/descriptionTextView"
        style="@style/TextAppearance.Body.Sans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/stepNumberTextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="For general usage of your Ledger’s Bluetooth feature, please refer to Ledger’s official Bluetooth Connection Guide. " />

</androidx.constraintlayout.widget.ConstraintLayout>
