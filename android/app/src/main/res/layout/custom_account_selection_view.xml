<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/bg_small_shadow"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmsans_medium"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/keyline_1"
        android:paddingVertical="14dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/dropDownImageView"
        app:layout_constraintEnd_toStartOf="@id/dropDownImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/dropDownImageView"
        tools:text="Spending Accounts" />

    <TextView
        android:id="@+id/hintTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dmsans_medium"
        android:maxLines="1"
        android:paddingStart="@dimen/keyline_1"
        android:paddingTop="14dp"
        android:paddingEnd="@dimen/keyline_1"
        android:paddingBottom="14dp"
        android:text="@string/choose_account"
        android:textColor="@color/hintTextColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dropDownImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dropDownImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_spinner_down" />

</merge>
