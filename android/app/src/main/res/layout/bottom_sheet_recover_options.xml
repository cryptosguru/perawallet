<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/keyline_1_minus_8dp"
    android:paddingTop="12dp"
    android:paddingBottom="@dimen/bottom_safe_area_margin"
    tools:background="@color/secondaryBackground">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pasteButton"
        style="@style/TextButton.Options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/keyline_1_minus_8dp"
        android:text="@string/paste_full_passphrase"
        app:icon="@drawable/ic_paste" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/scanQrButton"
        style="@style/TextButton.Options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/keyline_1_minus_8dp"
        android:text="@string/scan_qr_code"
        app:icon="@drawable/ic_qr_scan" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/learnMoreButton"
        style="@style/TextButton.Options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/keyline_1_minus_8dp"
        android:text="@string/learn_more"
        app:icon="@drawable/ic_info" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelButton"
        style="@style/UnelevatedButton.General.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/keyline_1_minus_8dp"
        android:layout_marginTop="@dimen/keyline_1"
        android:text="@string/cancel"
        android:textSize="14sp"
        app:rippleColor="@color/gray_BE" />

</LinearLayout>

