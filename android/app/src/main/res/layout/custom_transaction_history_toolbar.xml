<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/historyTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/transaction_history"
        android:textAppearance="@style/TextAppearance.Body.Sans.Medium" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/filterButton"
        style="@style/IconButton.Transparent"
        android:layout_width="@dimen/transaction_view_button_size"
        android:layout_height="@dimen/transaction_view_button_size"
        app:icon="@drawable/ic_filter"
        app:iconTint="@color/text_gray" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exportButton"
        style="@style/IconButton.Transparent"
        android:layout_width="@dimen/transaction_view_button_size"
        android:layout_height="@dimen/transaction_view_button_size"
        app:icon="@drawable/ic_share"
        app:iconTint="@color/text_gray" />

</merge>
