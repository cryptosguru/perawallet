<!-- TODO Missing shadow -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@drawable/bg_algo_rewards_border"
    tools:orientation="vertical"
    tools:paddingHorizontal="@dimen/spacing_normal"
    tools:paddingVertical="@dimen/spacing_xsmall"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/propertyTitle"
        style="@style/TextAppearance.Caption.Sans.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        tools:text="@tools:sample/lorem[1]" />

    <TextView
        android:id="@+id/propertyDescription"
        style="@style/TextAppearance.Body.Sans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxsmall"
        tools:text="@tools:sample/lorem[2]" />

</merge>
