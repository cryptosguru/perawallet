<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/spacing_xlarge">

    <TextView
        android:id="@+id/firstInstruction"
        style="@style/TextAppearance.Body.Sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_xlarge"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/spacing_large"
        android:text="@string/make_sure_your_ledger"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_right_arrow"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/secondInstruction"
        style="@style/TextAppearance.Body.Sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_xlarge"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/spacing_large"
        android:text="@string/install_the_algorand_app_onto_your_ledger"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_right_arrow"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/thirdInstruction"
        style="@style/TextAppearance.Body.Sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_xlarge"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/spacing_large"
        android:text="@string/open_the_algorand_app"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_right_arrow"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/fourthInstruction"
        style="@style/TextAppearance.Body.Sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/spacing_xlarge"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/spacing_large"
        android:text="@string/make_sure_bluetooth"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_right_arrow"
        tools:visibility="visible" />

</LinearLayout>
