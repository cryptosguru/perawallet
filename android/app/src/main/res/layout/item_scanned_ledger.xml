<!-- TODO Missing Shodow -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_xlarge"
    android:layout_marginVertical="@dimen/spacing_xsmall"
    android:background="@drawable/bg_passphrase_group_background"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="@dimen/spacing_normal"
        android:layout_marginStart="@dimen/spacing_normal"
        android:background="@drawable/bg_layer_gray_lighter_oval"
        android:padding="@dimen/spacing_xsmall"
        app:srcCompat="@drawable/ic_ledger" />

    <TextView
        android:id="@+id/nameTextView"
        style="@style/TextAppearance.Body.Sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_normal"
        app:drawableEndCompat="@drawable/ic_right"
        tools:text="@tools:sample/lorem[1]" />

</LinearLayout>
