<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:gravity="center_vertical"
    tools:layout_height="wrap_content"
    tools:layout_width="match_parent"
    tools:minHeight="@dimen/settings_list_item_min_height"
    tools:orientation="horizontal"
    tools:paddingHorizontal="@dimen/settings_list_item_horizontal_padding"
    tools:paddingVertical="@dimen/keyline_1_minus_8dp"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:tint="@color/colorPrimary"
        tools:srcCompat="@drawable/ic_code" />

    <TextView
        android:id="@+id/nameTextView"
        style="@style/TextAppearance.Settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:fontFamily="@font/publicsans_medium"
        android:text="@string/developer_settings"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/secondaryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/publicsans_medium"
        android:textColor="@color/gray_59"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="@tools:sample/lorem[1]"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_right_arrow"
        app:tint="@color/gray_59" />

</merge>
