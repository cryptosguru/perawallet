<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:background="@color/primaryButtonBackgroundColor">

    <View
        android:id="@+id/modalityLineView"
        style="@style/BottomSheetModalityLine"
        android:layout_marginTop="@dimen/spacing_small" />

    <com.algorand.android.customviews.CustomToolbar
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_toolbar_height"
        android:layout_marginTop="@dimen/spacing_xsmall" />

    <com.algorand.android.customviews.SixDigitPasswordView
        android:id="@+id/viewPassphraseLockSixDigitPasswordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="48dp" />

    <com.algorand.android.customviews.DialPadView
        android:id="@+id/viewPassphraseLockDialPadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/bottom_safe_area_margin"
        app:buttonHorizontalMargin="20dp"
        app:buttonVerticalMargin="10dp" />

</LinearLayout>
