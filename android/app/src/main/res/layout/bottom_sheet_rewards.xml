<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/bottom_safe_area_margin">

    <View
        style="@style/BottomSheetModalityLine"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/spacing_small" />

    <com.algorand.android.customviews.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_toolbar_height" />

    <TextView
        style="@style/TextAppearance.Footnote.Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_xlarge"
        android:layout_marginTop="@dimen/spacing_xlarge"
        android:text="@string/rewards" />

    <TextView
        android:id="@+id/rewardsAmountTextView"
        style="@style/TextAppearance.Body.Large.Mono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_xlarge"
        android:layout_marginTop="@dimen/spacing_xsmall"
        android:drawablePadding="@dimen/spacing_small"
        app:drawableStartCompat="@drawable/ic_algo_green_round"
        tools:text="0.94028594 ALGO" />

    <View
        style="@style/Divider.Horizontal"
        android:layout_marginVertical="@dimen/spacing_xxlarge" />

    <TextView
        style="@style/TextAppearance.Body.Sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_xlarge"
        android:text="@string/you_earn_rewards_just" />

    <TextView
        android:id="@+id/moreInfoTextView"
        style="@style/TextAppearance.Body.Sans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_xlarge"
        android:layout_marginTop="@dimen/spacing_small"
        tools:text="@string/for_more_information" />

</LinearLayout>
