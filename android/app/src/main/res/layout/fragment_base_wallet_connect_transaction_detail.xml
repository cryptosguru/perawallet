<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <com.algorand.android.ui.common.walletconnect.WalletConnectAppPreviewCardView
            android:id="@+id/appInfoCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.algorand.android.ui.common.walletconnect.WalletConnectSenderCardView
            android:id="@+id/senderInfoCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.algorand.android.ui.common.walletconnect.WalletConnectTransactionInfoCardView
            android:id="@+id/transactionInfoCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.algorand.android.ui.common.walletconnect.WalletConnectAmountInfoCardView
            android:id="@+id/amountInfoCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <com.algorand.android.ui.common.walletconnect.WalletConnectExtrasCardView
            android:id="@+id/extrasCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
