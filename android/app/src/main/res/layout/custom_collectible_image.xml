<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.FrameLayout">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/collectibleShapeableImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:shapeAppearance="@style/CollectibleImageShapeAppearance" />

    <ImageView
        android:id="@+id/videoPlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_play"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/collectibleNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.Footnote.Sans"
        android:textColor="@color/secondary_text_color"
        android:visibility="gone"
        tools:text="@tools:sample/lorem/random"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/collectibleProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</merge>
