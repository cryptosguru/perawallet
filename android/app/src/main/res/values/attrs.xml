<resources>
    <attr name="showOperator" format="boolean" />
    <attr name="algoLogoViewSize" format="dimension" />
    <attr name="defaultTintColor" format="color" />
    <attr name="useMicroAlgos" format="boolean" />

    <declare-styleable name="PadView">
        <attr name="number" format="integer" />
    </declare-styleable>

    <declare-styleable name="AccountAssetSelector">
        <attr name="showBalance" format="boolean" />
        <attr name="showArrow" format="boolean" />
        <attr name="showAccountType" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AmountInput">
        <attr name="amountInputBackground" format="reference" />
        <attr name="isMaxEnabled" format="boolean" />
        <attr name="editableAmount" format="boolean" />
        <attr name="editTextSize" format="dimension" />
        <attr name="logoSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AmountTextView">
        <attr name="showOperator" />
        <attr name="useMicroAlgos" />
        <attr name="algoTextViewSize" format="dimension" />
        <attr name="algoLogoViewSize" />
        <attr name="defaultTintColor" />
        <attr name="iconTint" />
        <attr name="algoFontFamily" format="reference" />
    </declare-styleable>

    <declare-styleable name="SendRequestCustomButton">
        <attr name="buttonType" format="enum">
            <enum name="Send" value="0" />
            <enum name="Request" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SelectionView">
        <attr name="hintText" format="string" />
    </declare-styleable>

    <declare-styleable name="AssetNameTextView">
        <attr name="showSubText" format="boolean" />
        <attr name="showId" format="boolean" />
        <attr name="anchorTextsToEnd" format="boolean" />
        <attr name="showAlgoIcon" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CollapsibleAccountView">
        <attr name="collapsedListSize" format="integer" />
    </declare-styleable>

    <declare-styleable name="EmptyListView">
        <attr name="emptyImageSrc" format="reference" />
        <attr name="emptyTitleText" format="string" />
        <attr name="emptyDescriptionText" format="string" />
    </declare-styleable>

    <declare-styleable name="SettingsListItem">
        <attr name="settingsShowArrow" format="boolean" />
        <attr name="settingsIcon" format="reference" />
        <attr name="settingsText" format="string" />
    </declare-styleable>

    <declare-styleable name="RegisterTypeSelectionItem">
        <attr name="typeSelectionIcon" format="reference" />
        <attr name="typeSelectionTitleText" format="string" />
        <attr name="typeSelectionDescriptionText" format="string" />
    </declare-styleable>

    <declare-styleable name="LockableInput">
        <attr name="lockedBackground" format="reference" />
        <attr name="lockedTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="TransactionAmountTextView">
        <attr name="showOperator" />
        <attr name="algoLogoViewSize" />
        <attr name="defaultTintColor" />
        <attr name="amountTextViewSize" format="dimension" />
        <attr name="amountFontFamily" format="reference" />
        <attr name="otherAssetTextViewSize" format="dimension" />
        <attr name="otherAssetFontFamily" format="reference" />
        <attr name="iconTint" />
    </declare-styleable>

    <declare-styleable name="WarningTextView">
        <attr name="warningText" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomInputLayout">
        <attr name="hint" format="string" />
        <attr name="text" format="string" />
        <attr name="error" format="string" />
        <attr name="helper" format="string" />
        <attr name="singleLine" format="boolean" />
        <attr name="maxCharacter" format="integer" />
    </declare-styleable>

    <declare-styleable name="AlgorandAssetAvatarView">
        <attr name="assetName" format="string" />
    </declare-styleable>

    <declare-styleable name="ScreenStateView">
        <attr name="iconRes" format="reference" />
        <attr name="titleRes" format="reference" />
        <attr name="descriptionRes" format="reference" />
        <attr name="buttonTextRes" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomAmountView">
        <attr name="showOperator" />
        <attr name="useMicroAlgos" />
    </declare-styleable>

    <declare-styleable name="AlgorandTabLayout">
        <attr name="leftTabText" format="reference" />
        <attr name="rightTabText" format="reference" />
    </declare-styleable>

    <declare-styleable name="DialPadView">
        <attr name="buttonVerticalMargin" format="dimension" />
        <attr name="buttonHorizontalMargin" format="dimension" />
        <attr name="padButtonSize" format="dimension" />
        <attr name="showDotButton" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AlgorandSearchBarView">
        <attr name="startIconTintColor" format="color" />
        <attr name="endIconTintColor" format="color" />
        <attr name="android:hint" format="reference" />
        <attr name="customButtonIconRes" format="reference" />
        <attr name="customButtonIconColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="CompactChartView">
        <attr name="showTimeFrame" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ViewPortHeightRecyclerView">
        <attr name="heightOffset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CollectibleImageView">
        <attr name="textHorizontalMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CollectibleMediaPager">
        <attr name="bottomButtonText" format="string" />
        <attr name="bottomButtonIcon" format="reference" />
        <attr name="isBottomButtonVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AccountCopyQrView">
        <attr name="isTitleVisible" format="boolean" />
        <attr name="accountIconSize" format="dimension" />
    </declare-styleable>

</resources>
