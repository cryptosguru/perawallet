<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/firstStepLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/keyline_1"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <TextView
            style="@style/TextAppearance.LedgerInstructionStepNumber"
            android:text="1" />

        <TextView
            style="@style/TextAppearance.LedgerInstructionStepDescription"
            android:text="@string/make_sure_your_ledger" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondStepLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <TextView
            style="@style/TextAppearance.LedgerInstructionStepNumber"
            android:text="2" />

        <TextView
            style="@style/TextAppearance.LedgerInstructionStepDescription"
            android:text="@string/install_the_algorand_app" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdStepLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:gravity="center">

        <TextView
            style="@style/TextAppearance.LedgerInstructionStepNumber"
            android:text="3" />

        <TextView
            style="@style/TextAppearance.LedgerInstructionStepDescription"
            android:text="@string/open_the_algorand_app" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthStepLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/keyline_1"
        android:gravity="center">

        <TextView
            style="@style/TextAppearance.LedgerInstructionStepNumber"
            android:text="4" />

        <TextView
            style="@style/TextAppearance.LedgerInstructionStepDescription"
            android:text="@string/make_sure_bluetooth" />

    </LinearLayout>

</LinearLayout>
